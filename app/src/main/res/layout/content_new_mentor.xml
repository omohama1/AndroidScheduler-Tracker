<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.c196application.NewMentor"
    tools:showIn="@layout/activity_new_mentor">

    <EditText
        android:id="@+id/mentorNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mentor name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mentorEmailText"
        android:layout_alignStart="@+id/mentorEmailText" />

    <EditText
        android:id="@+id/mentorPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="102dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/mentorEmailText"
        android:layout_alignLeft="@+id/mentorEmailText"
        android:layout_alignStart="@+id/mentorEmailText" />

    <EditText
        android:id="@+id/mentorEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="182dp"
        android:layout_below="@+id/mentorNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/subButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mentorPhoneText"
        android:layout_alignStart="@+id/mentorPhoneText"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/mentorPhoneText"
        android:onClick="createNewMentor"
        android:text="Submit" />
</RelativeLayout>
